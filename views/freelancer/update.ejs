<%- include('../header') %>
    <div class="col-md-9 p-3">
        <form action="/freelancers/update/<%= freelance.id %>" method="post">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">First name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="<%= freelance.first_name %>" name="first_name">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Last name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="<%= freelance.last_name %>" name="last_name">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" value="<%= freelance.email %>" name="email">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Image url</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="<%= freelance.image %>" name="image">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Contact</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" value="<%= freelance.contact_information>"
                        name="contact_information">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Tambahkan</button>
        </form>
    </div>